<form id="regForm" class="form-horizontal" method="post">
    <fieldset>
        <h3>用户注册</h3>
        <hr/>
        <div class="form-group form-group-sm">
            <label class="col-sm-2 control-label" for="username">用户名</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="username" required>
                <p class="help-block">你的账户名称，用于登录和显示。</p>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-2 control-label" for="email">邮箱</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" name="email" required>
                <p class="help-block">你的邮箱，用于找回密码等操作。</p>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-2 control-label" for="password">口令</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="password" placeholder="请输入6-16位的密码" required>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-2 control-label" for="password-repeat">重复输入口令</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password_repeat"
                       name="password_repeat" required>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">注册</button>
            </div>
        </div>
    </fieldset>
</form>
<!-- validate验证 -->
<script src="/javascripts/jquery.validate.min.js"></script>

<script type="text/javascript" src="/javascripts/reg.js"></script>