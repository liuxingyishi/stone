<link href="/stylesheets/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
<link href="/stylesheets/style.css" rel="stylesheet">
<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-sm-8">
            <form id="feeAdd" class="form-horizontal" method="post">
                <fieldset>
                    <h3>记一下</h3>
                    <hr/>
                    <div class="form-group form-group-sm">
                        <label class="col-sm-2 control-label">日期</label>
                        <div class="col-sm-10">
                            <div class='input-group date' style="width:30%" id='form_date' data-date="" data-date-format="yyyy-mm-dd">
                                <input id="date" name="date" type='text' class="form-control" data-format="yyyy-mm-dd" readonly/>
	                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
	                            </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <!-- Select Basic -->
                        <label class="col-sm-2 control-label">类别</label>
                        <div class="col-sm-10">
                            <select id="type" name="type" class="form-control" title="请选择类别" style="width: 100px" required>
                                <%types.forEach(function(type){%>
                                <option value="<%=type.value%>"><%=type.show%></option>
                                <%})%>
                            </select>
                        </div>
                    </div>

                    <div class="form-group form-group-sm">

                        <!-- Prepended text-->
                        <label class="col-sm-2 control-label">金额</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon" id="amount_addon">￥</span>
                                <input id="amount" name="amount" class="form-control" placeholder="金额" type="text" style="width: 220px" aria-describedby="amount_addon">
                            </div>
                        </div>

                    </div>
                    <div class="form-group">

                        <!-- Textarea -->
                        <label class="col-sm-2 control-label">备注</label>
                        <div class="col-sm-10">
                            <div class="textarea">
                                <textarea id="remark" class="form-control" name="remark" type="" style="resize:none;width:90%" row="3"> </textarea>
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-group-sm">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">提交</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
        <div class="col-sm-4" style="padding-top: 50px ">
            <div id="chartShow" style="height: 300px;">

            </div>
        </div>
    </div>
</div>
<!-- validate验证 -->
<script src="/javascripts/jquery.validate.min.js"></script>
<!-- datepicker选择日期 -->
<script src="/javascripts/bootstrap-datetimepicker.min.js" charset="UTF-8"></script>
<script src="/javascripts/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script>
<!-- chart图表 -->
<script src="/javascripts/echarts.js"></script>
<script type="text/javascript">
    // 路径配置 for echarts
    require.config({
        paths: {
            echarts: '/javascripts'
        }
    });
</script>
<script src="/javascripts/fee/feeAdd.js"></script>
