<div class="modal fade" id="editFeeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">修改</h4>
            </div>
            <div class="modal-body">
                <form id="feeEdit" class="form-horizontal" method="post">
                    <div class="form-group form-group-sm">
                        <label class="col-sm-2 control-label">日期</label>
                        <div class="col-sm-10">
                            <div class='input-group date' style="width:30%" id='form_date' data-date="" data-date-format="yyyy-mm-dd">
                                <input id="date" name="date" type='text' class="form-control" data-format="yyyy-mm-dd" readonly/>
	                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
	                            </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <!-- Select Basic -->
                        <label class="col-sm-2 control-label">类别</label>
                        <div class="col-sm-10">
                            <select id="type" name="type" class="form-control" title="请选择类别" style="width: 100px" required>
                                <!--                                <%//types.forEach(function(type){%>
                                <option value="<%//=type.value%>"><%//=type.show%></option>
                                <%//})%>-->
                            </select>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <!-- Prepended text-->
                        <label class="col-sm-2 control-label">金额</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon" id="amount_addon">￥</span>
                                <input id="amount" name="amount" class="form-control" placeholder="金额" type="text" style="width: 220px" aria-describedby="amount_addon">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <!-- Textarea -->
                        <label class="col-sm-2 control-label">备注</label>
                        <div class="col-sm-10">
                            <div class="textarea">
                                <textarea id="remark" class="form-control" name="remark" type="" style="resize:none;width:90%" row="3"> </textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary">提交</button>
            </div>
        </div>
    </div>
</div>
